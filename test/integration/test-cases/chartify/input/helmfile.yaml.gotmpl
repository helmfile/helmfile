releases:
  - name: httpbin
    chart: ../../../charts/httpbin
    jsonPatches:
      - target:
          group: apps
          version: v1
          kind: Deployment
          name: httpbin-httpbin
        patch:
          - path: "/spec/strategy/type"
            op: replace
            value: Recreate
    set:
      - name: image.pullPolicy
        value: Always
