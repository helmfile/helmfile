releases:
- name: foo
  chart: ../../../charts/raw
  values:
  - templates:
    - |
      apiVersion: v1
      kind: ConfigMap
      metadata:
        name: {{`{{ .Release.Name }}`}}-1
        namespace: {{`{{ .Release.Namespace }}`}}
      data:
        foo: FOO
    dep:
      templates:
      - |
        apiVersion: v1
        kind: ConfigMap
        metadata:
          name: {{`{{ .Release.Name }}`}}-2
          namespace: {{`{{ .Release.Namespace }}`}}
        data:
          bar: BAR
  postRenderer: {{ if eq (env "HELMFILE_HELM4") "1" }}add-cm{{ else }}./add-cm.bash{{ end }}
  postRendererArgs:
    - cm2
- name: baz
  chart: ../../../charts/raw
  values:
  - templates:
    - |
      apiVersion: v1
      kind: ConfigMap
      metadata:
        name: {{`{{ .Release.Name }}`}}-3
        namespace: {{`{{ .Release.Namespace }}`}}
      data:
        baz: BAZ
