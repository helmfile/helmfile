repositories:
- name: myrepo
  url: localhost:$REGISTRY_PORT/myrepo
  oci: true

releases:
{{- range $i := until 5 }}
- name: release-{{ $i }}
  chart: myrepo/raw
  version: 0.1.0
  values:
  - templates:
    - |
      apiVersion: v1
      kind: ConfigMap
      metadata:
        name: {{`{{ .Release.Name }}`}}
        namespace: {{`{{ .Release.Namespace }}`}}
        annotations:
          chart-version: {{`{{ .Chart.Version }}`}}
      data:
        values: {{`{{ .Release.Name }}`}}
{{- end }}
