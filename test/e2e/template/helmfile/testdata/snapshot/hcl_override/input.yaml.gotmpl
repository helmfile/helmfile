environments:
  default:
    values:
      - values1.hcl
      - values2.hcl
---

helmDefaults:
  kubeContext: minikube

releases:

  - name: hcl-demo
    chart: ../../charts/raw-0.1.0
    values:
    - templates:
      - |
        apiVersion: v1
        kind: ConfigMap
        metadata:
          name: configmap
        data:
          a: {{ .Values.a }}
          b: {{ .Values.b }}
          c: {{ .Values.c }}
          d: {{ .Values.d }}
          e: {{ .Values.e }}
          list: "{{ .Values.list }}"
          hello: {{ .Values.nestedmap.submap.subsubmap.hello }}
          world: {{ .Values.nestedmap.submap.subsubmap.world }}
